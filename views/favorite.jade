

-if(favorites && favorites.length > 0)
  .card
    .card-header You like !!
    .card-content 
    .list-block.media-list
      ul
        each favorite in favorites
          li.swipeout(data-id=favorite.id)
              .swipeout-content
                .item-content
                  .item-media
                    //- img(src=post.gallery[0], width='80')
                    img(src=favorite.images, width='80')
                  .item-inner
                    .item-title-row
                      .item-title 
                        a.link(data-ignore-cache="true", href='/postDetailf7/#{favorite.id}') #{favorite.title}
                    .item-subtitle #{favorite.Item.itemname}
              .swipeout-actions-right
                a.bg-pink.deletelike.notif-message(href='#')
                  img(src='/img/deletelike.png', alt='deletelike', style="height: 30px;")

