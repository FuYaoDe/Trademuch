
.page.toolbar-fixed.navbar-fixed.chat(data-page='chat', style="overflow-y: scroll;")
  .navbar
    .navbar-inner
      .left
        a.back.link(href='#')
          i.icon.icon-back-white.icon-back
          span Back
          
  .toolbar.messagebar
    .toolbar-inner
      textarea.text-left(placeholder='Message', maxlength=255)
      a.link(href='#') Send
      
  .page-content.messages-content
    .messages
      -if(history)
        -if(history.empty!=true)
          each chat,index in history.result 
            -console.log("!!!!!!!!!!!! index",index);
            -var tDate=chat.date;
            -var second=false;
            -if( index>1 && tDate!=chat.date ) second=true;
            -if(chat.user.id==user.id)
              -if( index==0 || second )
                .messages-date
                  | #{chat.date} ,
                  span #{chat.time}
              .message.message-sent
                .message-text #{chat.content}
                .message-avatar(style='background-image:url("//graph.facebook.com/" + chat.user.fbId + "/picture?type=large)"')
            -else   
              -if( index==0 || second )
                .messages-date
                  | #{chat.date} ,
                  span #{chat.time}
              .message.message-received
                .message-name #{chat.user.username}
                .message-text #{chat.content}
                .message-avatar(style='background-image:url("//graph.facebook.com/" + chat.user.fbId + "/picture?type=large)"')

  .info 
    -if(user.fbId)
      input#userFBId(type="hidden" value="#{user.fbId}")
