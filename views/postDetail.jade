                      span Login!
                    .icon
                      i.fa.fa-sign-in
                -else
                  a.submit-item(href='/story')
                    .content
                      span Submit Your Item
                    .icon
                      i.fa.fa-plus
        // end Navigation
        // Page Canvas
        #page-canvas
          // Off Canvas Navigation
          nav.off-canvas-navigation
            header Navigation
            .main-navigation.navigation-off-canvas
          // end Off Canvas Navigation
          // Page Content
          #page-content
            #map-detail(data-json = post)
            section.container
              .row
                // Item Detail Content
                .col-md-9
                  section#main-content.block
                    header.page-title
                      .detailFavbox
                        .favbox.left
                          a.favboxa(data-id="#{post.id}")
                              i.fa.fa-lg.fa-heart
                      .title
                        div.price 
                        -if (post.price)
                          span $#{post.price}
                        -else
                          span (no price now)
                        h1 #{post.title}
                        figure #{post.itemname}
                    .row
                      // Detail Sidebar
                      aside#detail-sidebar.col-md-4.col-sm-4
                        // Contact
                        section
                          header
                            h3 Contact
                          address
                            div #{post.username}
