  body#page-top.page-subpage.page-item-detail.navigation-off-canvas(onunload='')
    // Outer Wrapper
    #outer-wrapper
      // Inner Wrapper
      #inner-wrapper
        // Navigation
        .header
          .wrapper
            .brand
              a(href='/')
                img(src='../img/logo.png', alt='logo' style="height: 45px;")
            nav.navigation-items
              .wrapper
                ul.main-navigation.navigation-top-header
                ul.main-navigation
                -if (!userLogin) 
                  a.submit-item(href='/auth/facebook') 
