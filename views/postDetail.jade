                                a(href='#') #{post.email || ''}
                      .col-md-8.col-sm-8
                        section
                          article.item-gallery
                            .owl-carousel.item-slider
                              .slide
                                img(src=post.gallery, data-hash='1', alt='')
                        section
                          article.item-gallery
