.page.toolbar-fixed.navbar-fixed.chat(data-page='postDetail')
  .navbar
    .navbar-inner
      .left
        a.back.link(href='#')
          i.icon.icon-back-white.icon-back
          span Back
      .right  
        .detailFavbox
          .favbox
            a.right.favboxa(data-id="#{post.id}")
             |                  
             -if(isFav==true)
               i.fa.fa-lg.fa-heart(style="color:#ff5757")
             -else
               i.fa.fa-lg.fa-heart(style="color:rgba(255, 255, 255, 0.35)")
               
  input#itemId(type="hidden",value='#{post.id}')
  .page-content
    .list-block.cards-list
      ul
       li.card.ks-card-header-pic(data-fbId='#{fbId}')
         .card-header.color-white.no-border.img-cover(style='background-image: url(#{post.gallery})', data-hash='1', title=post.title)       
         .card-content
          .card-content-inner
            span.post-title.bold #{post.title}  
            //- span.post-price.bold $#{post.price}

            //- span
            //-  .post-itemname.bold #{post.itemname}

            //- span
            //-  .post-content.bold #{post.content ||'no description now.'}
          .list-block
            ul  
              //- ------------------ facebook
              li
                a.item-link.item-content.external.fbShare()
                  .item-media.title-items
                    img(src='/img/facebook-32x32.png', alt='facebook', style="height: 32px;")
                  .item-inner
                    .item-title.bold Share to Facebook
                    
              //- ------------------ line
              li
                a.item-link.item-content.external.lineIt(href="http://line.me/R/msg/text/TradeMuch - #{post.title} - ")
                  .item-media.title-items
                    img(src='/img/linebutton_20x20_en.png', alt='line', style="height: 32px;")
                  .item-inner
                    .item-title.bold Share with LINE friends
                    
              //- ------------------ chat
              li
                a.item-link.item-content.chat(href="/chat/#{post.id}/page", data-force="true", data-ignore-cache="true")
                  .item-media.title-items
                    img(src='/img/chatï¼¿60x60.png', alt='chat', style="height: 32px;")
                  .item-inner
                    .item-title.bold Talk to Owner
                    
              //- ------------------ phone
              -if(post.phone)
                li
                  a.item-link.item-content(href='#')
                    .item-media.title-items
                      i.icon.icon-form-tel
                    .item-inner
                      .item-title.bold #{'no phone number now.'}
                      
              //- ------------------ email
              -if(post.email)
                li
                  a.item-content.external(href='mailto:#{post.email}')
                    .item-media.email-user
                      i.icon.icon-form-email
                    .item-inner
                      .item-title.bold.black #{post.email}
         .card-footer
          .mapWrapper.center
            a.external(href="https://www.google.com.tw/maps/place/"+post.latitude+","+post.longitude)
              -var staticMap = "http://maps.google.com/maps/api/staticmap?zoom=18&size=390x180&sensor=ture&maptype=roadmap&markers="
              -var link = staticMap+post.latitude+","+post.longitude;
              img(src=link, data-hash='1', alt='location', width='350')
              
