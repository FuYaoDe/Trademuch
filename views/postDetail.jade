
.list-block.cards-list
  ul
   li.card
     .card-header.post-img
       .imgWrapper.center
         img(src=post.gallery, data-hash='1', alt='#{post.title}', style="width:100%;" )
             
     .card-content
      .card-content-inner
        span.post-title.bold #{post.title}  
        span.post-price.bold $#{post.price}
        span
         .post-itemname.bold #{post.itemname}
        span
         .post-content.bold #{post.content ||'no description now.'}
      .list-block
        ul
          li
          -if(post.phone)
            a.item-link.item-content(href='#')
              //- img(src='/img/phone.png', alt='phone', style="height: auto;")
              .item-media.title-items
                i.icon.icon-form-tel
              .item-inner
                .item-title.bold #{'no phone number now.'}
          -if(post.email)
            li
              a.item-link.item-content.external(href='mailto:#{post.email}')
                //- img(src='/img/mail.png', alt='mail', style="height: auto;")
                .item-media.email-user
                  i.icon.icon-form-email
                .item-inner
                  .item-title.bold #{post.email}
     .card-footer
      .mapWrapper.center
        a.external(href="https://www.google.com.tw/maps/place/"+post.latitude+","+post.longitude)
          img(src="http://maps.google.com/maps/api/staticmap?zoom=18&size=390x180&sensor=ture&maptype=roadmap&markers="+post.latitude+","+post.longitude, data-hash='1', alt='location', style="width:100%;")

  .card
    .card-content 
      .list-block.media-list
        .item-content
          .item-inner
            #fb-root
            .fb-comments.external(data-width="400", data-numposts="5")       
  script.
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.5&appId=915539495181624";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    
    $$(function(){
      var origin = window.location.origin;
      $$(".fb-comments").attr('data-href', origin+"/postDetail/#{post.id}");
    });
