  title Spotter - Universal Directory Listing HTML Template
  body#page-top.page-subpage.page-item-detail.navigation-off-canvas(onunload='')
    // Outer Wrapper
    #fb-root
    #outer-wrapper
      // Inner Wrapper
      #inner-wrapper
        // Navigation
        .header
          .wrapper
            .brand
              a(href='/')
                img(src='../img/logo.png', alt='logo' style="height: 45px;")
            nav.navigation-items
              .wrapper
                ul.main-navigation.navigation-top-header
                ul.main-navigation
                -if (!userLogin) 
                  a.submit-item(href='/auth/facebook') 
                    .content
                      span Login!
                    .icon
                      i.fa.fa-sign-in
                -else
                  a.submit-item(href='/story')
                    .content
                      span Submit Your Item
                    .icon
                      i.fa.fa-plus
        // end Navigation
        // Page Canvas
        #page-canvas
          // Off Canvas Navigation
          nav.off-canvas-navigation
            header Navigation
            .main-navigation.navigation-off-canvas
          // end Off Canvas Navigation
          // Page Content
          #page-content
            #map-detail(data-json = post)
            section.container
              .row
                // Item Detail Content
                .col-md-9
                  section#main-content.block
                    header.page-title
                      .detailFavbox
                        .favbox.left
                          a.favboxa(data-id="#{post.id}")
                              i.fa.fa-lg.fa-heart
                      .title
                        div.price 
                        -if (post.price)
                          span $#{post.price}
                        -else
                          span (no price now)
                        h1 #{post.title}
                        figure #{post.itemname}
                    .row
                      // Detail Sidebar
                      aside#detail-sidebar.col-md-4.col-sm-4
                        // Contact
                        section
                          header
                            h3 Contact
                          address
                            div #{post.username}
                            //- div 63 Birch Street
                            //- div Granada Hills, CA 91344
                            figure
                              //- .info
                              //-   i.fa.fa-mobile
                              //-   span 818-832-5258
                              //- .info
                              //-   i.fa.fa-phone
                              //-   span +1 123 456 789
                              .info
                                i.fa.fa-globe
                                a(href='#') #{post.email || ''}
                      .col-md-8.col-sm-8
                        section
                          article.item-gallery
                            .owl-carousel.item-slider
                              .slide
                                img(src=post.gallery, data-hash='1', alt='')
                        section
                          article.item-gallery
                            header
                              h2 Description
                            p  #{post.content||'no description now.'}
                        .fb-comments(data-href="http://localhost:1337/postDetail/#{post.id}" data-width="400" data-numposts="5") 
                      // end Inner Wrapper
                    // end Outer Wrapper
                    script(type='text/javascript', src='/js/map/jquery-2.1.0.min.js')
                    script(type='text/javascript', src='/js/map/before.load.js')
                    script(type='text/javascript', src='http://maps.google.com/maps/api/js?libraries=places')
                    script(type='text/javascript', src='/js/map/jquery-migrate-1.2.1.min.js')
                    script(type='text/javascript', src='/js/map/bootstrap-select.min.js')
                    script(type='text/javascript', src='/js/map/richmarker-compiled.js')
                    script(type='text/javascript', src='/js/map/smoothscroll.js')
                    script(type='text/javascript', src='/js/map/bootstrap-select.min.js')
                    script(type='text/javascript', src='/js/map/jquery.hotkeys.js')
                    script(type='text/javascript', src='/js/map/custom.js')
                    script(type='text/javascript', src='/js/map/maps.js')
                    script(type='text/javascript', src='/js/favbox.js')
                    script.
                      //- var itemID = 1;
                      //- console.log(JSON.parse($('#map-detail').attr('data-json')));
                      itemDetailMap(JSON.parse($('#map-detail').attr('data-json')));
