head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(href='/fonts/font-awesome.css', rel='stylesheet', type='text/css')
  link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
  link(rel='stylesheet', href='../styles/bootstrap/css/bootstrap.min.css', type='text/css')
  link(rel='stylesheet', href='../styles/mapCss/bootstrap-select.min.css', type='text/css')
  link(rel='stylesheet', href='../styles/mapCss/owl.carousel.css', type='text/css')
