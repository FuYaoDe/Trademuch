
link(rel='stylesheet', href='styles/css/storyDetail.css', type='text/css')
.navbar
    .navbar-inner
        .left
          a.back.link(href='#')
            i.icon.icon-back-white.icon-back
            span Back
        .right
          a#finishStep Finish
    .pages
      .page.navbar-fixed(data-page='storyDetail')
        .page-content
          -console.log(categoryItems);
          .list-block
            .item-content
              .item-inner
                .item-input.fileUpload-input
                  .btn.btn-primary.fileUpload-btn
                    span Upload photos
                    input.uploadBtn#imageLoader(type='file', accept="image/*", name='image', capture)
                  img.preview
                  div.canvasWrapper(style="display:none")
                    canvas#viewport
          form#storyImageUpload
              input(form='storyImageUpload', type='hidden', name='picBase64')
          form#storyDetailChoose
            .list-block
              .item-content
                .item-inner
                  .item-input
                    input(type='text', name='title', placeholder='give a title', onkeyup="value=value.replace(/[^\w\.\/]/ig,』』)")
                           
              .item-content
                .item-inner
                  .item-title.label
                  span.money
                  |$
                  .item-input.StoryPrice
                    input(type='number', pattern="\d*", name='price', placeholder='give a price', value='0')
                      
              .item-content
                .item-inner
                  .item-input
                    input(type='text', name='postPeriod', placeholder='posting period', id='calendar-postPeriod', readonly)
   
              -console.log(categoryItems.length);
              .item-content(style="display:none")
                .item-inner
                  .item-input
                    input(type='hidden', name='item', placeholder="item type")
              .item-content
                .item-inner
                  .item-input
                    textarea(placeholder='description', type='text', name='content', onkeyup="value=value.replace(/[^\w\.\/]/ig,』』)")
